<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">
    <fragment
        android:id="@+id/FirstFragment"
        android:name="edu.neu.khoury.madsea.chrisholzheu.ToDoListItem"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/todo_list">
        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>

    <fragment
        android:id="@+id/SecondFragment"
        android:name="edu.neu.khoury.madsea.chrisholzheu.AddTodoActivity"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/activity_add_todo">
        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_LocationPicker"
            app:destination="@id/LocationPicker" />
        <action
            android:id="@+id/action_SecondFragment_pop"
            app:destination="@id/FirstFragment"
            app:popUpTo="@id/SecondFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <activity
        android:id="@+id/LocationPicker"
        android:name="edu.neu.khoury.madsea.chrisholzheu.LocationPickerActivity"
        android:label="@string/location_picker_label"
        tools:layout="@layout/activity_choose_location">
    </activity>

</navigation>