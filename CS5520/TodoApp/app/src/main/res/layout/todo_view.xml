<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="mTodo"
            type="edu.neu.khoury.madsea.chrisholzheu.ToDo" />
        <variable
            name="todoTitle"
            type="String" />
        <variable
            name="todoDetails"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/todoCheckBox"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/todoTitleView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{mTodo.todoTitle}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/todoCheckBox"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/todoDetailView"
            android:text="@{mTodo.todoDetails}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/todoTitleView"
            app:layout_constraintStart_toStartOf="@id/todoCheckBox"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>